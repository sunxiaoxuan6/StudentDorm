<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ui.DormActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/dorm"
        android:textSize="40sp"/>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">
        <RadioButton
            android:checked="true"
            android:id="@+id/stay1"
            android:text="住宿信息"
            android:drawableTop="@drawable/tab_menu_luru"
            style="@style/tab_menu_item"/>
        <RadioButton
            android:checked="false"
            android:id="@+id/revise1"
            android:text="修改个人信息"
            android:drawableTop="@drawable/tab_menu_fenpei"
            style="@style/tab_menu_item"/>
    </RadioGroup>
    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal">
        <RadioButton
            android:checked="false"
            android:id="@+id/manage1"
            android:text="宿舍管理"
            android:drawableTop="@drawable/tab_menu_luru"
            style="@style/tab_menu_item"/>
        <RadioButton
            android:checked="false"
            android:id="@+id/inquiry1"
            android:text="个人信息查询"
            android:drawableTop="@drawable/tab_menu_fenpei"
            style="@style/tab_menu_item"/>
    </RadioGroup>
    <Button
        android:id="@+id/return1"
        android:layout_marginTop="50sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="返回登录界面"
        android:textSize="20sp"/>
</LinearLayout>



